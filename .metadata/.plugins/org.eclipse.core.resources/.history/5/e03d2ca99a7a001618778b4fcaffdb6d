import java.util.Scanner;


public class hackerrank {

	

	

	    public static void main(String[] args) {

	        Scanner scan = new Scanner(System.in);
	        int q= scan.nextInt();
	        
	        int[] arr = new int[q];
	        for(int i=0;i<q;i++)
	            {
	                arr[i]= scan.nextInt();
	            }
	        
	        for(int i =0;i<q;i++)
	        {
	        	if(arr[i]%2==0)
	        	{
	        		System.out.println("Yes");
	        	}
	        	else
	        	{
	        		System.out.println("No");
	        		
	        	}
	        }
	        
	        
	    }
	}

